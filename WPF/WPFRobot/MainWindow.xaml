<Window x:Class="WPFRobot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helix="http://helix-toolkit.org/wpf"
        Title="Helix Toolkit Line Example" Height="450" Width="800">
    <Grid>
        <helix:HelixViewport3D x:Name="helixViewport" Margin="0,0,234,138" ShowCameraInfo="True">
            <helix:HelixViewport3D.Camera>
                  <PerspectiveCamera Position="140.230 -222.104 148.187"
                     LookDirection="-150.629 224.372 -132.528"
                     UpDirection="0.236 -0.351 0.906"/>
            </helix:HelixViewport3D.Camera>
            <helix:SunLight />
            <helix:GridLinesVisual3D />
            
        </helix:HelixViewport3D>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="36" Width="88" Click="Button_Click"/>
    </Grid>
</Window>

    
    
